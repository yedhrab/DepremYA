<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:id="@+id/quake_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2.2"
            android:gravity="center"
            android:background="@drawable/magnitude_background"
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/quake_item_ml"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quake_item_hour"
                    android:text="SAAT"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quake_item_date"
                    android:text="TARIH"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quake_item_place"
                android:text="YER"
                android:textSize="16sp"
                android:fontFamily="@font/muli" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quake_item_depth"
                    android:text="DERINLIK"
                    android:textSize="16sp"
                    android:fontFamily="@font/muli" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quake_item_resolution"
                    android:text="NITELIK"
                    android:layout_alignParentEnd="true"
                    android:textSize="16sp"
                    android:fontFamily="@font/muli" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quake_item_md"
                    android:text="MD"
                    android:fontFamily="@font/robotoslab_semibold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/quake_item_long"
                    android:text="LONG"
                    android:fontFamily="@font/robotoslab_semibold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quake_item_mw"
                    android:text="MW"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/robotoslab_semibold"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>